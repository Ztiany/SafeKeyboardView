<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:keyboard="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.ztiany.safekb.SystemKeyboardEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        keyboard:keyboardTitle="安全键盘"
        android:layout_margin="10dp"
        android:padding="10dp"
        keyboard:xmlLayoutResId="@xml/keyboard_letter_upper_case" />

    <me.ztiany.safekb.SystemKeyboardEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        keyboard:keyboardTitle="安全键盘"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        keyboard:xmlLayoutResId="@xml/keyboard_letter_lower_case" />

    <me.ztiany.safekb.SystemKeyboardEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        keyboard:keyboardTitle="安全键盘"
        android:layout_margin="10dp"
        android:padding="10dp"
        keyboard:xmlLayoutResId="@xml/keyboard_symbol" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
